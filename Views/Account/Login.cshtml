@model PersonModel

@{
	ViewData["Title"] = "Log in";
}

<div class="login-container" style="text-align: center">
	<h2>Используйте акканут для входа</h2>
	<div class="row">
		<div class="login-col">
			<section class="login-section  border" style="padding: 20px; border: 3px; border-radius: 30px">
				<form method="post" asp-action="Login" style="display: flex; flex-direction: column; align-items: center">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="login-form_item form-floating">
						<input asp-for="PersonName" class="form-control" autocomplete="username" aria-required="true" />
						<label asp-for="PersonName" class="form-label"></label>
						<span asp-validation-for="PersonName" class="text-danger"></span>
					</div>
					<div class="login-form_item form-floating">
						<input asp-for="PersonPassword" class="form-control" autocomplete="current-password" aria-required="true" />
						<label asp-for="PersonPassword" class="form-label"></label>
						<span asp-validation-for="PersonPassword" class="text-danger"></span>
					</div>
					<div class="login-btn" style="margin-top: 60px">
						<button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary" style="background-image: linear-gradient(45deg, #f5e4b7, #dfd3c3); border: none">Войти</button>
					</div>
				</form>
			</section>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}