@model TaskManager.Models.ProjectModel 

@{ 
    ViewData["Title"] = "Delete"; 
} 


<div class="body-background" style="opacity:1;"></div>
<div class="bg" style="opacity:0.5;"></div>
<div class="bg" style="opacity:0.5; transform: rotate(135deg);"></div>

<div class="login-container" style="text-align: center">
    <div class="row">
        <div class="login-col">
	        
            <section class="login-section  border" style="padding: 20px; border: 3px; border-radius: 30px; background-color: rgba(255, 224, 227, 5)">
                <form method="post" asp-action="Register" style="display: flex; flex-direction: column; align-items: center">
                    <div class="login-form_item form-floating">
                        <p class="font-style" style="font-size:25px; font-weight:500; opacity:0.7">Are you sure you want to delete this?</p>
                    </div>
                    <hr>
                    <div class="login-form_item form-floating" style="display:flex; align-items: center; justify-content:center">
                        <dd class="col-sm-10" style="opacity:0.7">
                            @Html.DisplayFor(model => model.ProjectName)
                        </dd>
                    </div>
                    <div class="login-btn" style="margin-top: 60px">
                        <input type="hidden" asp-for="ProjectId"/>
                        <div style="display:flex; align-items: center; justify-content:center; width:100%">
                            <div style="margin-right:5%;">
                                <button type="submit" class="w-100 btn btn-lg btn-primary transparent-button" style="background-image: linear-gradient(45deg, pink, #f5e4b7); border: none; " asp-action="Delete" value="Delete">Delete</button>
                            </div>
                            <div style=" margin-left:5%;">
                                <button type="submit" class="w-100 btn btn-lg btn-primary transparent-button" style="background-image: linear-gradient(45deg, #f5e4b7, #BADBAD); border: none; white-space: nowrap;" asp-action="Index" asp-route-PersonName="@Model.CreatorName">Back to List</button>
                            </div>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>